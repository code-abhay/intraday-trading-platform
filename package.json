{
  "name": "intraday-trading-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "auto-sync": "node scripts/auto-sync.js",
    "dev:auto": "concurrently \"npm run dev\" \"npm run auto-sync\"",
    "setup": "npm install && echo 'Setup complete. Run: npm run dev:auto'",
    "db:push": "npx supabase db push --include-all",
    "db:dry-run": "npx supabase db push --dry-run --include-all",
    "build": "next build",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.469.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-label": "^2.1.1",
    "@supabase/supabase-js": "^2.49.1"
  },
  "devDependencies": {
    "chokidar": "^4.0.1",
    "concurrently": "^9.1.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.2.14",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
